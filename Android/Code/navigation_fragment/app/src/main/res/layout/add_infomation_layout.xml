<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:id="@+id/infomationTop"
        android:background="@drawable/infoback">

        <TextView
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="ZHKMXX930"
            android:textSize="45sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:id="@+id/info_user"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/infomationBottom"
        android:layout_below="@id/infomationTop"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1000"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/tel"
                android:layout_margin="20dp"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:text="-"
                        android:background="@android:color/transparent"
                        android:id="@+id/tel_work"
                        />
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:text="Work"
                        android:textSize="15sp"
                        android:layout_below="@id/tel_work"/>
                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/xiugai"
                        android:layout_alignParentRight="true"
                        android:layout_margin="20dp"
                        android:id="@+id/xiugai_tel_work"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:text="-"
                        android:background="@android:color/transparent"
                        android:id="@+id/tel_mobile"
                        />
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:text="Mobile"
                        android:textSize="15sp"
                        android:layout_below="@id/tel_mobile"/>
                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/xiugai"
                        android:layout_alignParentRight="true"
                        android:layout_margin="20dp"
                        android:id="@+id/xiugai_tel_mobile"/>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>



        <EditText
            android:layout_width="340dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="90dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1000"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/email"
                android:layout_margin="20dp"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    
                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:text="-"
                        android:inputType="textEmailAddress"
                        android:background="@android:color/transparent"
                        android:id="@+id/email_personal"
                        />
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:text="Personal"
                        android:textSize="15sp"
                        android:layout_below="@id/email_personal"/>
                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/xiugai"
                        android:layout_alignParentRight="true"
                        android:layout_margin="20dp"
                        android:id="@+id/xiugai_email_personal"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:text="-"
                        android:background="@android:color/transparent"
                        android:id="@+id/email_work"
                        />
                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:text="Address"
                        android:textSize="15sp"
                        android:layout_below="@id/email_work"/>
                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/xiugai"
                        android:layout_alignParentRight="true"
                        android:layout_margin="20dp"
                        android:id="@+id/xiugai_email_work"/>


                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>